extends base

block content
    main.h-screen.bg-sky-400
        div.flex.justify-center
            div.form-wrapper
                h2.form-title Sign in!
                form#signinForm.p-2
                    div.p-4.flex.items-center
                        label.form-label(for='name') Name
                        input#signinName.mx-4.form-input(type='text', placeholder='Your Name', required)
                    div.p-4.flex.items-center
                        label.form-label(for='email') Email address
                        input#signinEmail.mx-4.form-input(type='email', placeholder='you@example.com', required)
                    div.p-4.flex.items-center
                        label.form-label(for='password') Password
                        input#signinPassword.mx-4.form-input(type='password', placeholder='••••••••', required, minlength='8')
                    div.p-4.flex.items-center
                        label.form-label(for='passwordConfirm') Confirm password
                        input#signinPasswordConfirm.mx-4.form-input(type='password', placeholder='••••••••', required, minlength='8')
                    div.p-4
                        button#signinBtn.m-4.formbtn Sign in!