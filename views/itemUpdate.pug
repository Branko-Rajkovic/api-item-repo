extends base

block content

    div.form-wrapper
        form#updateItemForm.w-auto(data-id=`${item._id}`)

                
            div.p-2.rounded.border-1.border-gray-700.w-full
        
                div.flex.flex-col
                    div.m-1 
                        img.w-20.h-20.m-4.flex-none(src=`/img/items/${item.itemCoverImage}`, alt='item cover image')
                        label.form-label(for='itemCoverImage') Change cover image
                        input#itemCoverImage.form-input(type='file', name='itemCoverImage')
                    div.p-1
                        input#itemName.form-input.m-1(type='text', name='itemName', value=`${item.itemName}`)   
                        input#itemValue.form-input.m-1(type='text', name='itemValue', value=`${item.itemValue}`)
                        input#itemCategory.form-input.m-1(type='text', name='itemCategory', value=`${item.itemCategory}`)
                        textarea#itemDescription.form-input.m-1(rows='4', cols='30', name='itemDescription')= item.itemDescription

                    
                    div.flex.p-1.w-auto
                        div 
                            img.w-20.h-20.m-4.flex-none(src=`/img/items/${item.itemOtherImages[0]}`, alt='item other image')
                            label.form-label(for='otherImage0') Change image
                            input#otherImage0.form-input(type='file', name='otherImage0')   
                        div 
                            img.w-20.h-20.m-4.flex-none(src=`/img/items/${item.itemOtherImages[1]}`, alt='item other image')
                            label.form-label(for='otherImage1') Change image
                            input#otherImage1.form-input(type='file', name='otherImage1')
                        div 
                            img.w-20.h-20.m-4.flex-none(src=`/img/items/${item.itemOtherImages[2]}`, alt='item other image')
                            label.form-label(for='otherImage2') Change image
                            input#otherImage2.form-input(type='file', name='otherImage2')

                    div 
                        button.btn(type='submit') Update item
                        
            