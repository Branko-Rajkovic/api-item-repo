extends base

block content
    main.h-screen.bg-sky-400
        div.flex.justify-center
            div.form-wrapper
                h2.form-title Change your password
                form#passwordForm.p-2
                    div.p-4.flex.items-center
                    div.p-4.flex.items-center
                        label.form-label(for='password') Your current password
                        input#oldPassword.mx-4.form-input(type='password', placeholder='••••••••', required, minlength='8')
                    div.p-4.flex.items-center
                        label.form-label(for='password') Your new password
                        input#newPassword.mx-4.form-input(type='password', placeholder='••••••••', required, minlength='8')
                    div.p-4.flex.items-center
                        label.form-label(for='password') Please confirm your new password
                        input#newPasswordConfirm.mx-4.form-input(type='password', placeholder='••••••••', required, minlength='8')                    
                    div.p-4
                        button#changePassword.m-4.formbtn Change password