header#header.p-4
    .flex.gap-1.w-full.p-4.items-center.bg-white
        h1.font-sriracha.text-red-600 Open
        img.m-1(src='/img/icons/earth_header96.png' alt='logo')
        h1.font-bakbakone.text-grey-700 Shop

    .flex.justify-between.mx-2
        .flex.items-center
            include _sidebar
            +sidebar("sidebar", {name: "Home", href: "/"})

        .flex.items-center
            if user
                span.text-sky-500.font-comfortaa= user.name
                a(href='/account')
                    img.w-16.h-16.border-4.rounded-full(src=`/img/users/${user.photo}`, alt='user photo')
                a#logoutBtn.btn-log(href="/") Log out
            else
                div.flex.bg-slate-600.rounded-r-full
                     
                    form#loginForm.space-y-1.m-1(style='display: block')
                        div.flex.max-h-6                
                            input#email.form-input.max-w-40(type='email', placeholder='you@example.com', required)
                            input#password.form-input.max-w-40(type='password', placeholder='••••••••', required, minlength='8')
                            button.btn-log(type="submit") Login
                            a.btn-log(href='/signin') or Sign in
                div
                    //- a.btn-log(href='/login') Log in!
                    //- a.btn-log(href='/signin') Sign in!